<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <!-- BOOTSTRAP ICON -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <!-- MY CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <title>
        <%= data.title %>
    </title>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- NAVBAR -->
            <nav class="navbar navbar-expand-lg bg-body-light fixed-top shadow-sm">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active fs-2 hamburger" aria-current="page" href="#"><i
                                        class="bi bi-list"></i></a>
                            </li>
                        </ul>
                        <form class="d-flex" role="search">
                            <div class="search">
                                <i class="bi bi-search me-2"></i>Search
                            </div>
                            <input type="text" placeholder="" aria-label="Search">
                            <button class="btn btn-outline-primary fw-bold" type="submit">Search</button>
                        </form>
                        <div class="row">
                            <div class="circle ms-4">
                                <div class="col">
                                    <div class="text-dark fw-bold text-center mt-1">
                                        U
                                    </div>
                                </div>
                            </div>
                            <div class="col mt-1">Unis Badri <i class="bi bi-caret-down-fill"></i></div>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- SIDEBAR -->
            <nav id="sidebarMenu" class="col-md-3 d-md-block bg-body-light sidebar collapse position-fixed">
                <div class="row">
                    <div class="col-md-3">
                        <div id="sidebar">
                            <div class="position-sticky pt-3">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <div class="navbar-brand-sidebar ms-3 mt-1"></div>
                                    </li>
                                    <li class="nav-item mt-4">
                                        <a class="nav-link text-light" href="#"><i class="bi bi-house-door"></i>
                                            <p class="dashboard">Dashboard</p>
                                        </a>
                                    </li>
                                    <li class="nav-item mt-4 cars">
                                        <a class="nav-link text-light fw-bold" href="#"><i
                                                class="bi bi-car-front text-light"></i>
                                            <p class="cars">Cars</p>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="position-sticky pt-3">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <span class="ms-3 text-secondary">CARS</span>
                                </li>
                                <li class="nav-item mt-4 list-car" style="background: #CFD4ED">
                                    <a class="nav-link text-dark fw-bold" href="#">List Car</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- Main Content -->
            <main class="col-md-9 px-md-4 main">
                <div><b>Cars > <a href="/" class="nav-link d-inline">List Car</a> > </b>Add New Car</div>
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                    <h3>Add New Car</h3>
                </div>
                <form action="/car" enctype="multipart/form-data" method="post" style="background: #ffffff"
                    class="p-4 mb-5">
                    <div class="mb-3 row">
                        <label for="nama" class="col-sm-2 col-form-label">Nama <span
                                class="text-danger">*</span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="nama" id="nama" placeholder="Avanza">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="sewa" class="col-sm-2 col-form-label">Sewa Per Hari <span
                                class="text-danger">*</span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="sewa" id="sewa" placeholder="Rp 0,-">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="ukuran" class="col-sm-2 col-form-label">Ukuran <span
                                class="text-danger">*</span></label>
                        <div class="col-sm-10">
                            <select name="ukuran" class="form-select" id="ukuran">
                                <option value="small">Small</option>
                                <option value="medium">Medium</option>
                                <option value="large">Large</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="gambar" class="col-sm-2 col-form-label">Foto <span
                                class="text-danger">*</span></label>
                        <div class="col-sm-10">
                            <input type="file" class="form-control" name="gambar" id="gambar">
                        </div>
                    </div>
                    <button class="btn btn-outline-primary d-inline" style="margin-top: 10rem;">Cancel</button>
                    <button class="btn btn-primary d-inline" style="margin-top: 10rem;">Save</button>
                </form>
            </main>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
    <!-- SWEET ALERT -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        let urlParams = new URLSearchParams(window.location.search)
        if (urlParams.has('success') && urlParams.get('success')) {
            Swal.fire({
                icon: 'success',
                title: 'Data Berhasil Ditambahkan',
                showConfirmButton: false,
                timer: 1500
            }).then(() => {
                window.location.replace(window.location.origin + '/')
            })
        }

    </script>
</body>

</html>