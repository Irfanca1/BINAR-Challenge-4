<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <!-- BOOTSTRAP ICON -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <!-- MY CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <title>
        <%= data.title %>
    </title>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- NAVBAR -->
            <nav class="navbar navbar-expand-lg bg-body-light fixed-top shadow-sm">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active fs-2 hamburger" aria-current="page" href="#"><i
                                        class="bi bi-list"></i></a>
                            </li>
                        </ul>
                        <form class="d-flex" role="search">
                            <div class="search">
                                <i class="bi bi-search me-2"></i>Search
                            </div>
                            <input type="text" placeholder="" aria-label="Search">
                            <button class="btn btn-outline-primary fw-bold" type="submit">Search</button>
                        </form>
                        <div class="row">
                            <div class="circle ms-4">
                                <div class="col">
                                    <div class="text-dark fw-bold text-center mt-1">
                                        U
                                    </div>
                                </div>
                            </div>
                            <div class="col mt-1">Unis Badri <i class="bi bi-caret-down-fill"></i></div>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- SIDEBAR -->
            <nav id="sidebarMenu" class="col-md-3 d-md-block bg-body-light sidebar collapse position-fixed">
                <div class="row">
                    <div class="col-md-3">
                        <div id="sidebar">
                            <div class="position-sticky pt-3">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <div class="navbar-brand-sidebar ms-3 mt-1"></div>
                                    </li>
                                    <li class="nav-item mt-4">
                                        <a class="nav-link text-light" href="#"><i class="bi bi-house-door"></i>
                                            <p class="dashboard">Dashboard</p>
                                        </a>
                                    </li>
                                    <li class="nav-item mt-4 cars">
                                        <a class="nav-link text-light fw-bold" href="#"><i
                                                class="bi bi-car-front text-light"></i>
                                            <p class="cars">Cars</p>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="position-sticky pt-3">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <span class="ms-3 text-secondary">CARS</span>
                                </li>
                                <li class="nav-item mt-4 list-car" style="background: #CFD4ED">
                                    <a class="nav-link text-dark fw-bold" href="#">List Car</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- Main Content -->
            <main class="col-md-9 px-md-4 main">
                <div><b>Cars > </b>List Car</div>
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                    <h3>List Car</h3>
                    <div class="btn-add-car mb-2 mb-md-0">
                        <a href="/add" class="btn text-light fw-bold"><i class="bi bi-plus"></i>
                            Add New
                            Car</a>
                    </div>
                </div>
                <div class="d-inline">
                    <a class="btn btn-light btn-outline-primary">
                        All
                    </a>
                    <a class="btn btn-light btn-outline-primary disabled">
                        Small
                    </a>
                    <a class="btn btn-light btn-outline-primary disabled">
                        Medium
                    </a>
                    <a class="btn btn-light btn-outline-primary disabled">
                        Large
                    </a>
                </div>
                <div class="row">
                    <% for(var i=0; i<cars.length; i++) { %>
                        <div class="col-md-4">
                            <div class="card mt-5 mb-2" style="width: 18rem; ">
                                <img src="/images/<%=cars[i].gambar %>" height="200px" alt="">
                                <div class="card-body">
                                    <p class="card-text">
                                        <%= cars[i].nama_mobil %>
                                    </p>
                                    <h5 class="card-title">
                                        <%= accounting.formatMoney(cars[i].harga_perhari, "Rp. " , 2, "." , "," ) %>
                                    </h5>
                                    <p class="card-text">
                                        <i class="bi bi-clock"></i>
                                        Updated At <%= dayjs(Date(cars[i].updatedAt)).format('DD MM YYYY, HH:mm') %>
                                    </p>
                                    <a href="/delete/<%= cars[i].id %>" id="deleteBtn"
                                        data-confirm="Apakah Anda yakin ingin menghapus data ini?"
                                        class="btn btn-outline-danger"><i class="bi bi-trash"></i>
                                        Delete</a>
                                    <a href="/editCar/<%= cars[i].id %>/edit" class="btn btn-success"><i
                                            class="bi bi-pencil-square"></i> Edit</a>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
    <!-- ACCOUNTING -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/accounting.js/0.4.1/accounting.min.js"></script>
    <!-- SWEET ALERT -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const deleteBtn = document.getElementById('deleteBtn');

        const deleteLinks = document.querySelectorAll('a[data-confirm]')
        deleteLinks.forEach(link => {
            link.addEventListener('click', (event) => {
                event.preventDefault()

                // tampilkan SweetAlert2 untuk konfirmasi
                Swal.fire({
                    title: link.getAttribute('data-confirm'),
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Ya, hapus data',
                    cancelButtonText: 'Batal'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // jika pengguna mengkonfirmasi hapus data, arahkan ke route Express.js untuk menghapus data
                        // window.location.href = link.getAttribute('href')
                        Swal.fire(
                            'Deleted!',
                            'Your file has been deleted.',
                            'success'
                        ).then(() => {
                            window.location.href = link.getAttribute('href')
                        })
                    }
                })
            })
        })

        let urlParams = new URLSearchParams(window.location.search)
        if (urlParams.has('success') && urlParams.get('success')) {
            Swal.fire({
                icon: 'success',
                title: 'Data Berhasil Diedit',
                showConfirmButton: false,
                timer: 1500
            }).then(() => {
                window.location.replace(window.location.origin + '/')
            })
        }
    </script>
</body>

</html>